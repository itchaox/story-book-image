{
  "manifest_version": 3,
  "name": "Gemini Story Book 批量导出",
  "version": "1.0",
  "description": "批量导出Gemini Story Book中的spread-container元素为图片",
  "action": {
    "default_popup": "popup.html",
    "default_title": "批量导出图片"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/jszip.min.js",
        "libs/html2canvas.min.js",
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}